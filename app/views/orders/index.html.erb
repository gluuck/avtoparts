<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table-info">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th class="text-center">ID</th>
      <th class="text-center">Работы</th>
      <th class="text-center">Заказчик</th>
      <th class="text-center">Категория</th>
      <th class="text-center">Работник</th>
      <th class="text-center" colspan="2">Редактирование</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th colspan="3"></th>
        <td class="text-center"><%= order.id %></td>
        <td class="text-center"><%= link_to order.services.map(&:service_type).join(', ').truncate(15), order %></td>
        <td class="text-center"> <%= order.customer.name %></td>
        <td class="text-center"> <%= order.category.category_type %></td>
        <td class="text-center"> <%= order.executor.name %></td>
        <td class="text-center"><%= link_to 'Edit', edit_order_path(order) %></td>
        <td class="text-center"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

