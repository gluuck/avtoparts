<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>ID</th>
      <th>Работы</th>
      <th>Заказчик</th>
      <th>Категория</th>
      <th>Редактирование</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th colspan="3"></th>
        <td class="text-center"><%= order.id %></td>
        <td class="text-center"><%= link_to order.services.map(&:service_type).join(', ').truncate(15), order %></td>
        <td class="text-center"> <%= order.customer.name %></td>
        <td class="text-center"> <%= order.category.category_type %></td>

        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

